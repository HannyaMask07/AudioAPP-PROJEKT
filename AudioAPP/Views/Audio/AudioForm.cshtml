@model AudioAPP.Models.Audio

@{
}

<div class="container p-3 border">
    <form asp-controller="Audio" asp-action="add" method="post" enctype="multipart/form-data">
         <input asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Title">Tytuł</label>
            <input asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Treść:</label>
            <input asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label>Obrazek</label>
            <input  type="file" name = "image" accept="image/*"/>
        </div>
        <div class="mb-3">
            <label>Dzwięk</label>
            <input  type="file" name = "sound" accept="audio/*"/>
        </div>
        <button type="submit" class="btn btn-primary">Dalej</button>
    </form>
</div>