@model AudioAPP.ViewModels.CommentViewModel

@{
}
<h1>Komentarz</h1>

<div class="container p-3 border">
    <form asp-controller="Audio" asp-action="AddComment" method="post" enctype="multipart/form-data">
         <input asp-for="Id" type="hidden" />
         <input asp-for="AudioId" type="hidden" />
         <input asp-for="Author" type="hidden" />
        <div class="mb-3">
            <label asp-for="Message">Komentarz</label>
            <input asp-for="Message" />
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <button type="submit" value="Submit" class="btn btn-primary">Dalej</button>
    </form>
</div>