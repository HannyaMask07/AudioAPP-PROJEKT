@model IEnumerable<AudioAPP.Models.Profile>
@inject UserManager<IdentityUser> UserManager
@using Microsoft.AspNetCore.Identity
@using AudioAPP.Models
@{
}
<h1 class="text-uppercase m-1">Aktualności</h1>

<div class="container border p-2 list-group" style="width:100%">


    @foreach (var profile in @Model)
    {
        <div class="container m-2 p-2 border rounded">
            @if (User.Identity.IsAuthenticated && @profile.Author == @UserManager.GetUserName(User))
            {
                 <a button asp-action="Edit" class="btn btn-warning"  asp-route-id="@profile.Id" >Edit</a>
                                 <l>     </l>
                  <a button asp-action="Remove" class="btn btn-danger"  asp-route-id="@profile.Id" >Remove</a>
            }

            <h2 class="text-center">@profile.Title</h2>

            <div class="text-center">
            @profile.Description</div>
            <div class="text-right">
            Priorytet:
@*            @Html.DisplayFor(modelProfile => profile.Priorities);*@
            </div>
            <div class="text-right">
            Created:
            @profile.Created</div>
            Author:
            @profile.Author
            <div class = "comment-section">
                    <a button asp-action="Details" class="btn btn-secondary" asp-route-id="@profile.Id">Details</a> 
            </div>
             
        </div>
        
    }
    <div class="container border p-2 list-group" style="width:15%">
    <a button class="btn btn-success" asp-controller="ProfilePost" asp-action="Create">Dodaj post</a>
    </div>

</>