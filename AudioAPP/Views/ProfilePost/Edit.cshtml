@model AudioAPP.ViewModels.ProfileViewModel
@using AudioAPP.Models

@{
}
<h1>Edit</h1>

<div class="container p-3 border">
    <form asp-controller="ProfilePost" asp-action="Edit" method="post" enctype="multipart/form-data">
         <input asp-for="Id" type="hidden" />
         <input asp-for="Author" type="hidden" />
        <div class="mb-3">
            <label asp-for="Title">Tytuł</label>
            <input asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Treść:</label>
            <input asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Priorities">Priorytet:</label>
            <select asp-for="Priorities" class="form-control" asp-items="Html.GetEnumSelectList<Priority>()"> </select>
            <span asp-validation-for="Priorities" class="text-danger"></span>
        </div>
        <button type="submit" value="Submit" class="btn btn-primary">Dalej</button>
    </form>
</div>